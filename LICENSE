Write-Host "🔍 检查GitHub仓库完整性问题" -ForegroundColor Cyan
Write-Host "========================================" -ForegroundColor Cyan

# 1. 检查关键文件是否存在
Write-Host "`n1. 检查关键文件：" -ForegroundColor Yellow
$criticalFiles = @(
    "README.md",
    "package.json",
    "index.html",
    "vite.config.ts",
    "src/App.tsx",
    "src/main.tsx",
    "DETAILED_TEST_GUIDE.md",
    "USER_OPERATION_GUIDE.md",
    "LICENSE"
)

foreach ($file in $criticalFiles) {
    if (Test-Path $file) {
        $size = (Get-Item $file).Length
        Write-Host "  ✅ $file ($size 字节)" -ForegroundColor Green
    } else {
        Write-Host "  ❌ $file (缺失)" -ForegroundColor Red
    }
}

# 2. 检查GitHub Pages配置
Write-Host "`n2. GitHub Pages配置：" -ForegroundColor Yellow
Write-Host "  仓库设置页面: https://github.com/Excellence8/metacoding/settings/pages" -ForegroundColor White
Write-Host "  应该配置为：" -ForegroundColor Gray
Write-Host "  • 分支: gh-pages" -ForegroundColor Gray
Write-Host "  • 文件夹: / (根目录)" -ForegroundColor Gray

# 3. 检查许可证文件
Write-Host "`n3. 许可证文件检查：" -ForegroundColor Yellow
if (-not (Test-Path "LICENSE")) {
    Write-Host "  ⚠️ 缺少LICENSE文件，创建MIT许可证..." -ForegroundColor Yellow
